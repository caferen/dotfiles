#!/bin/sh

if pgrep -x obs; then
	for i in $(seq 1 10);
	do
		ydotool key 29:1 42:1 60:1 29:0 42:0 60:0
		sleep 0.1
	done
	sleep 0.5 && pkill -SIGTERM -x obs

	for file in $HOME/Videos/OBS/[2-9]*; do 
		if [ -f "$file" ]; then
			filename=$(basename "$file")
			filename="${filename%.*}"
			ffmpeg -i "$file" -vcodec libx265 \
				-crf 28 $HOME/Videos/OBS/Compressed/"$filename".mp4
			rm "$file"
		fi
	done
else
	obs --disable-missing-files-check \
		--disable-shutdown-check \
		--profile "Default" \
		--scene "Scene" &

	sleep 5

	ydotool key 29:1 42:1 59:1 29:0 42:0 59:0
fi
