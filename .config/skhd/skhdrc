# focus window
hyper - n : yabai -m window --focus west
hyper - e : yabai -m window --focus south
hyper - i : yabai -m window --focus north
hyper - o : yabai -m window --focus east

# move window
meh - n : yabai -m window --warp west
meh - e : yabai -m window --warp south
meh - i : yabai -m window --warp north
meh - o : yabai -m window --warp east

# resize window
hyper - q : yabai -m window --resize left:-20:0 \
			yabai -m window --resize right:-20:0
hyper - w : yabai -m window --resize top:0:20 \
			yabai -m window --resize bottom:0:20
hyper - f : yabai -m window --resize top:0:-20 \
			yabai -m window --resize bottom:0:-20
hyper - p : yabai -m window --resize right:20:0 \
			yabai -m window --resize left:20:0

# toggle floating
meh - g : yabai -m window --toggle float --grid 4:4:1:1:2:2

# kill active
meh - c : yabai -m window --close

# fullscreen
meh - f : yabai -m window --toggle zoom-fullscreen

# balance
meh - q : yabai -m space --balance

# turn off yabai
alt - q : yabai --stop-service


meh - t	: open -na /Applications/WezTerm.app
meh - b : open -na /Applications/Brave\ Browser.app
meh - d : open -na /Applications/Microsoft\ Teams\ \(work\ or\ school\).app
